<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Superhero & Movie </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <style>

        body{
            background-color: black;
            color: white;
        }

        .editMovieForm, .addMovieForm {
            width: 700px;
        }

        input, select, option {
            width: 250px;
            border: 1px solid black;
            color: white;
            background: rgba(0,0,0,0);
            border: 2px solid white;

        }

        input{
            border: none;
            border-bottom: 2px solid white;
        }

        input:focus {
            outline: none;
        }

        input::placeholder {
            color: white;
        }

        option {
            background-color: black;
            border: 2px solid white;
        }

        .submitBtn {
            width: 150px;
            height: 30px;
            border-radius: 15px;
            color: white;
            background: rgba(0,0,0,0);
            border: 2px solid white;
        }

        .submitBtn:hover {
            transition: .5s;
            background-color: white;
            color: black;
        }

        a{
            text-decoration: none;
            color:white;
        }

        a:hover{
            color:white;
            text-decoration: underline;
        }

        .table>tbody>tr>td, .table>tbody>tr>th, .table>tfoot>tr>td, .table>tfoot>tr>th, .table>thead>tr>td, .table>thead>tr>th {
            border-top: none;
        }

        th:first-child {
            border-right: 2px solid white;
            width: 230px;
        }

        table{
            width: 80% !important;
            margin: auto;
        }

        .movieList > h1 {
            width: 350px;
            margin-left: 10%;
            text-decoration: underline;
            font-weight: 700;
        }

        .form-box{
            width: 380px;
            height: 350px;
            position: relative;
            margin: 0 auto;
            background: black;
            padding: 5px;
            overflow: hidden;
        }

        .button-box{
            width: 260px;
            margin: 25px auto;
            position: relative;
            background-color: black;
        }

        .toggle-btn {
            padding: 10px 15px;
            cursor: pointer;
            background: transparent;
            border: 0;
            outline: none;
            position: relative;
            color: white;
            width: 125px;
        }

        #btn {
            top: 0;
            left: 0;
            position: absolute;
            width: 125px;
            height: 100%;
            color: white;
            background: black;
            border: 2px solid white;
            transition: .5s;
        }

        
        .addMovie, .editMovie {
            position: absolute;
            width: 280px;
            transition: .5s;
            
        }

        #addMovie{
            left: 50px;
        }

        #editMovie{
            left: 450px;
        }

        tbody > tr > td:hover {
            background-color: #2c2c2c;
            transition: .5s;
        }

        tbody > tr > td:last-child:hover {
            background: rgba(0,0,0,0);
            color: white;
        }

        thead > tr {
            text-transform: uppercase;
            font-weight: bolder;
            font-size: 16px;
        }

    </style>
</head>
<body>
        <div id="form-box" class="form-box">
            <div class="button-box">
                <div id="btn"></div>
                    <button type="button" class="toggle-btn" onclick="addMovie()">Add Movie</button>
                    <button type="button" class="toggle-btn" onclick="changeRating()">Change Rating</button>
                </div>

                    <form id="addMovie" class="addMovie" action="/getMovie" method="get">
                        <h1>Search Movie</h1>
                        <h4>Superhero Name</h4>
                        <input type="text" name="superheroName" placeholder="eg. Batman, Hulk, Aquaman">
                        <br><br>
                        <input class="submitBtn" type="submit" value="Add to Favourite">
                    </form>
            
                    <form id="editMovie" class="editMovie" action="/editMovie" method="get">
                        <h1>Change Rating</h1>
                        <h4>Superhero Name:</h4>
                        <select name="superheroName">
                            <%moviesList.forEach(movie => {%>
                                <option value="<%= movie._id %>"><%= movie.superhero %></option>
                            <%})%>
                        </select>
                        <br>
                        <h4>Rating:</h4> <input type="number" name="rating" min="0" max="10" placeholder="1 - 10">
                        <br><br>
                        <input class="submitBtn" type="submit" value="Update Rating">
                    </form>
             
            </div>
        </div>
        <div class="movieList">
            <h1>Favourite Movie List</h1>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Superhero</th>
                    <th scope="col">Fullname</th>
                    <th scope="col">Movie</th>
                    <th scope="col">Year of Release</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody>
                <%moviesList.forEach(movie => {%>
                    <tr>
                        <th scope="row"><%= movie._id %></th>
                        <td><%= movie.superhero %></td>
                        <td><%= movie.fullname %></td>
                        <td><%= movie.movieName %></td>
                        <td><%= movie.movieDescription %></td>
                        <td><%= movie.movieRating %></td>
                        <td><a href="/deleteMovie?title=<%= movie._id %>">Delete</a></td>
                    </tr>
                <%})%>
                </tbody>
            </table>
        </div>
   

<script>    
    var x = document.getElementById("addMovie");
    var y = document.getElementById("editMovie");
    var z = document.getElementById("btn");
    var a = document.getElementById("form-box");
        
    function changeRating(){
        x.style.left = "-400px";
        y.style.left = "50px";
        z.style.left = "127px";
        a.style.height = "350px";
        a.style.transition = ".5s"
    }
        
    function addMovie(){
        x.style.left = "50px";
        y.style.left = "450px";
        z.style.left = "0px";
        a.style.height = "350px";
        a.style.transition = ".5s"
    }

</script>
</html>
